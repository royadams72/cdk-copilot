{
  "collMod": "auth_credentials",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "_id",
        "provider",
        "hash",
        "algo",
        "params",
        "passwordStatus",
        "passwordUpdatedAt",
        "failedLoginCount",
        "mfa",
        "createdAt",
        "updatedAt",
        "createdBy",
        "updatedBy"
      ],
      "additionalProperties": false,
      "properties": {
        "_id": { "bsonType": "objectId" },
        "provider": { "enum": ["password"] },
        "hash": { "bsonType": "string", "minLength": 20 },
        "algo": { "enum": ["argon2id", "scrypt"] },
        "params": {
          "bsonType": "object",
          "required": ["m", "t", "p"],
          "additionalProperties": false,
          "properties": {
            "m": { "bsonType": "int", "minimum": 1 },
            "t": { "bsonType": "int", "minimum": 1 },
            "p": { "bsonType": "int", "minimum": 1 }
          }
        },
        "passwordStatus": {
          "enum": ["set", "needs_reset", "disabled", "compromised"]
        },
        "passwordUpdatedAt": { "bsonType": "date" },
        "passwordHistory": {
          "bsonType": "array",
          "items": {
            "bsonType": "object",
            "required": ["hash", "changedAt"],
            "additionalProperties": false,
            "properties": {
              "hash": { "bsonType": "string", "minLength": 20 },
              "changedAt": { "bsonType": "date" }
            }
          }
        },
        "failedLoginCount": { "bsonType": "int", "minimum": 0 },
        "lockoutUntil": { "bsonType": "date" },
        "mfa": {
          "bsonType": "object",
          "required": ["totpEnabled", "recoveryCodes"],
          "additionalProperties": false,
          "properties": {
            "totpEnabled": { "bsonType": "bool" },
            "totpSecretEnc": { "bsonType": "string" },
            "recoveryCodes": {
              "bsonType": "array",
              "items": { "bsonType": "string", "minLength": 10 }
            }
          }
        },
        "createdAt": { "bsonType": "date" },
        "updatedAt": { "bsonType": "date" },
        "createdBy": { "bsonType": "string", "minLength": 1 },
        "updatedBy": { "bsonType": "string", "minLength": 1 }
      }
    }
  },
  "validationLevel": "moderate",
  "validationAction": "error",
  "indexes": [
    { "key": { "passwordStatus": 1 }, "name": "byStatus" },
    { "key": { "lockoutUntil": 1 }, "name": "byLockout" },
    { "key": { "updatedAt": -1 }, "name": "byUpdatedAt" },
    {
      "key": { "mfa.totpEnabled": 1 },
      "name": "byTotpEnabled",
      "partialFilterExpression": { "mfa.totpEnabled": true }
    }
  ]
}
