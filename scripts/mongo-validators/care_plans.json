{
  "collMod": "care_plans",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "orgId",
        "patientId",
        "title",
        "status",
        "createdAt",
        "updatedAt",
        "createdBy",
        "updatedBy"
      ],
      "properties": {
        "orgId": { "bsonType": "string" },
        "patientId": { "bsonType": "objectId" },
        "title": { "bsonType": "string" },

        "createdBy": {
          "bsonType": "string",
          "description": "app-generated UUID",
          "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
        },
        "updatedBy": {
          "bsonType": "string",
          "description": "app-generated UUID",
          "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
        },

        "goals": {
          "bsonType": "array",
          "items": {
            "bsonType": "object",
            "required": ["key", "label"],
            "properties": {
              "key": { "bsonType": "string" },
              "label": { "bsonType": "string" },
              "target": { "bsonType": "object" }
            },
            "additionalProperties": true
          }
        },
        "tasks": {
          "bsonType": "array",
          "items": {
            "bsonType": "object",
            "required": ["key", "label", "freq", "status"],
            "properties": {
              "key": { "bsonType": "string" },
              "label": { "bsonType": "string" },
              "freq": { "enum": ["daily", "weekly", "once"] },
              "dueRule": { "bsonType": "string" },
              "instructions": { "bsonType": "string" },
              "status": { "enum": ["open", "paused", "done"] }
            },
            "additionalProperties": true
          }
        },
        "status": { "enum": ["draft", "active", "completed", "archived"] },
        "sources": {
          "bsonType": "array",
          "items": { "enum": ["manual", "ai", "template"] }
        },
        "notes": { "bsonType": "string" },
        "createdAt": { "bsonType": "date" },
        "updatedAt": { "bsonType": "date" },
        "activatedAt": { "bsonType": "date" },
        "completedAt": { "bsonType": "date" }
      },
      "additionalProperties": true
    }
  },
  "validationLevel": "moderate",
  "validationAction": "error",
  "indexes": [
    { "key": { "orgId": 1, "patientId": 1, "status": 1 } },
    { "key": { "orgId": 1, "status": 1, "updatedAt": -1 } }
  ]
}
