{
  "collMod": "measurements_ledger",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "kind",
        "patientId",
        "orgId",
        "measuredAt",
        "receivedAt",
        "source",
        "createdBy",
        "updatedBy"
      ],
      "properties": {
        "kind": {
          "enum": [
            "weight",
            "blood_pressure",
            "heart_rate",
            "steps",
            "exercise",
            "sleep"
          ]
        },
        "patientId": { "bsonType": "objectId" },
        "orgId": { "bsonType": "string" },
        "measuredAt": { "bsonType": "date" },
        "receivedAt": { "bsonType": "date" },
        "source": { "enum": ["patient", "device", "api", "provider"] },
        "device": {
          "bsonType": "object",
          "properties": {
            "name": { "bsonType": "string" },
            "platform": { "bsonType": "string" },
            "externalId": { "bsonType": "string" }
          },
          "additionalProperties": false
        },
        "notes": { "bsonType": "string" },
        "createdBy": { "bsonType": "string" },
        "updatedBy": { "bsonType": "string" },

        "valueKg": { "bsonType": ["double", "int", "long", "decimal"] },
        "systolicMmHg": { "bsonType": ["int", "long", "double", "decimal"] },
        "diastolicMmHg": { "bsonType": ["int", "long", "double", "decimal"] },
        "pulseBpm": { "bsonType": ["int", "long", "double", "decimal"] },
        "bpm": { "bsonType": ["int", "long", "double", "decimal"] },
        "count": { "bsonType": ["int", "long", "double", "decimal"] },
        "durationMin": { "bsonType": ["int", "long", "double", "decimal"] },
        "quality": { "enum": ["poor", "fair", "good", "excellent"] }
      },
      "additionalProperties": false
    }
  },
  "validationLevel": "moderate",
  "validationAction": "error",
  "indexes": [
    {
      "key": { "patientId": 1, "kind": 1, "measuredAt": -1 },
      "options": { "name": "byPatientKind_latest" }
    },
    {
      "key": { "patientId": 1, "measuredAt": -1 },
      "options": { "name": "byPatient_time" }
    },
    {
      "key": { "orgId": 1, "patientId": 1, "kind": 1, "measuredAt": -1 },
      "options": { "name": "byOrgPatientKind_time" }
    },
    {
      "key": {
        "orgId": 1,
        "patientId": 1,
        "kind": 1,
        "device.externalId": 1,
        "measuredAt": 1
      },
      "options": {
        "name": "dedupe_byDevice_ext_measuredAt",
        "unique": true,
        "partialFilterExpression": { "device.externalId": { "$exists": true } }
      }
    },
    { "key": { "receivedAt": -1 }, "options": { "name": "byReceived_desc" } },
    {
      "key": { "createdBy": 1, "measuredAt": -1 },
      "options": { "name": "byCreatedBy_time" }
    }
  ]
}
