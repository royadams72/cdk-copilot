{
  "collMod": "measurements_ledger",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "orgId",
        "patientId",
        "kind",
        "value",
        "at",
        "source",
        "createdAt",
        "updatedAt"
      ],
      "properties": {
        "orgId": { "bsonType": "string" },
        "patientId": { "bsonType": "objectId" },
        "kind": { "enum": ["weight", "bp", "steps", "sleep"] },
        "value": { "bsonType": "object" },
        "at": { "bsonType": "date" },
        "source": { "enum": ["manual", "apple", "google", "withings"] },
        "createdAt": { "bsonType": "date" },
        "updatedAt": { "bsonType": "date" }
      },
      "additionalProperties": true
    }
  },
  "validationLevel": "moderate",
  "validationAction": "error",
  "indexes": [
    { "key": { "userId": 1, "superseded": 1, "measuredAt": -1 } },
    { "key": { "userId": 1, "type": 1, "superseded": 1, "measuredAt": -1 } },
    { "key": { "userId": 1, "createdAt": -1 } },
    { "key": { "correctionOf": 1 } },
    {
      "key": { "userId": 1, "idemKey": 1 },
      "options": { "unique": true, "sparse": true }
    }
  ]
}
