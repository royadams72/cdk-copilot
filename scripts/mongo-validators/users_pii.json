{
  "collMod": "users_pii",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": ["patientId", "updatedAt"],
      "properties": {
        "patientId": { "bsonType": "objectId" },
        "orgId": { "bsonType": "string" },
        "firstName": { "bsonType": "string" },
        "lastName": { "bsonType": "string" },
        "dateOfBirth": { "bsonType": "date" },
        "sexAtBirth": {
          "bsonType": "string",
          "enum": ["female", "male", "intersex", "unknown"]
        },
        "genderIdentity": { "bsonType": "string" },
        "ethnicity": { "bsonType": "string" },
        "phoneE164": { "bsonType": "string" },
        "email": { "bsonType": "string" },
        "address": {
          "bsonType": "object",
          "properties": {
            "line1": { "bsonType": "string" },
            "line2": { "bsonType": "string" },
            "city": { "bsonType": "string" },
            "postcode": { "bsonType": "string" },
            "country": { "bsonType": "string" }
          },
          "additionalProperties": true
        },
        "createdAt": { "bsonType": "date" },
        "updatedAt": { "bsonType": "date" }
      },
      "additionalProperties": true
    }
  },
  "validationLevel": "moderate",
  "validationAction": "error",
  "indexes": [
    {
      "key": { "patientId": 1 },
      "options": { "unique": true, "name": "uniq_patientId" }
    },
    {
      "key": { "orgId": 1, "updatedAt": -1 },
      "options": { "name": "byOrgUpdated" }
    },
    {
      "key": { "orgId": 1, "email": 1 },
      "options": {
        "unique": true,
        "name": "uniq_org_email_ci",
        "partialFilterExpression": {
          "orgId": { "$type": "string" },
          "email": { "$type": "string" }
        },
        "collation": { "locale": "en", "strength": 2 }
      }
    },
    {
      "key": { "email": 1 },
      "options": {
        "unique": true,
        "name": "uniq_global_email_ci",
        "partialFilterExpression": {
          "orgId": null,
          "email": { "$type": "string" }
        },
        "collation": { "locale": "en", "strength": 2 }
      }
    },
    {
      "key": { "orgId": 1, "phoneE164": 1 },
      "options": {
        "unique": true,
        "name": "uniq_org_phone",
        "partialFilterExpression": {
          "orgId": { "$type": "string" },
          "phoneE164": { "$type": "string" }
        }
      }
    },
    {
      "key": { "phoneE164": 1 },
      "options": {
        "unique": true,
        "name": "uniq_global_phone",
        "partialFilterExpression": {
          "orgId": null,
          "phoneE164": { "$type": "string" }
        }
      }
    },
    {
      "key": { "lastName": 1, "firstName": 1, "dateOfBirth": 1 },
      "options": { "name": "byNameDob" }
    }
  ]
}
