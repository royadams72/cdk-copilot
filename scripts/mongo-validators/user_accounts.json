{
  "collMod": "users_accounts",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "orgId",
        "role",
        "principalId",
        "isActive",
        "createdAt",
        "updatedAt",
        "createdBy",
        "updatedBy"
      ],
      "properties": {
        "orgId": { "bsonType": "string" },
        "role": { "enum": ["patient", "clinician", "dietitian", "admin"] },
        "principalId": { "bsonType": "string", "minLength": 3 },
        "scopes": { "bsonType": "array", "items": { "bsonType": "string" } },
        "facilityIds": {
          "bsonType": "array",
          "items": { "bsonType": "string" }
        },
        "careTeamIds": {
          "bsonType": "array",
          "items": { "bsonType": "string" }
        },
        "allowedPatientIds": {
          "bsonType": "array",
          "items": { "bsonType": "string", "pattern": "^[0-9a-fA-F]{24}$" }
        },
        "isActive": { "bsonType": "bool" },
        "createdAt": { "bsonType": "date" },
        "updatedAt": { "bsonType": "date" },
        "createdBy": { "bsonType": "string" },
        "updatedBy": { "bsonType": "string" }
      },
      "additionalProperties": true
    }
  },
  "validationLevel": "moderate",
  "validationAction": "error",
  "indexes": [
    { "key": { "principalId": 1 }, "options": { "unique": true } },
    { "key": { "orgId": 1, "isActive": 1 } },
    { "key": { "orgId": 1, "role": 1 } },
    { "key": { "orgId": 1, "facilityIds": 1 } },
    { "key": { "orgId": 1, "careTeamIds": 1 } }
  ]
}
