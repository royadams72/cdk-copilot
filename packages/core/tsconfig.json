{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["src/isomorphic", "src/shared", "src/server"]
}
